<beast version='2.0'
       namespace='beast.core
                 :beast.core.util
                 :beast.core.parameter
                 :beast.evolution.tree.coalescent
                 :beast.util
                 :bacter
                 :bacter.model
                 :bacter.operators
                 :bacter.util'>

  
  <input spec='SimulatedRecombinationGraph' id='arg'
         rho="0.0005" delta="50.0" sequenceLength="10000" nTaxa="2">
      <populationModel spec='ConstantPopulation' popSize="1.0" id="popFunc"/>
      <clonalFrame spec='TreeParser' newick="(1:0.799841931948889,2:0.799841931948889):0.0;"/>
  </input>

  <input spec='GCCoalescentApprox' id="argPrior">
      <rho spec='RealParameter' value="0.0005" id="rho" estimate="false"/>
      <delta spec='RealParameter' value="50.0" id="delta" estimate="false"/>
      <treeIntervals spec='TreeIntervals' tree="@arg"/>
      <populationModel idref="popFunc"/>
  </input>
  
  <run spec="MCMC" id="mcmc" chainLength="100000000">
    <state>
      <stateNode idref='arg'/>
    </state>
    
    <distribution spec="CompoundDistribution" id="posterior">
      <distribution idref="argPrior"/>
    </distribution>

    <operator id="addRemove" spec="AddRemoveRecombination" weight="1.0">
        <arg idref="arg"/>
        <rho idref="rho"/>
        <delta idref="delta"/>
        <populationModel idref="popFunc"/>
    </operator>

    <logger logEvery="10000">
      <model idref='posterior'/>
      <log idref="posterior"/>
    </logger>
    
    <logger logEvery="1000" fileName="$(filebase).trees" mode="tree">
       <log idref="arg"/>
     </logger>
     
     <logger logEvery="1000" fileName="$(filebase).cf" mode="tree">
         <log spec="ClonalFrameLogger" arg="@arg"/>
     </logger>
     
     <logger logEvery="100" fileName="$(filebase).converted">
         <log idref="posterior"/>
         <log spec="ConvertedRegionLogger" arg="@arg"/>
     </logger>
     
     <logger logEvery="100" fileName="$(filebase).stats">
         <log idref="posterior"/>
         <log spec="RecombinationGraphStatsLogger" arg="@arg"/>
     </logger>

  </run>

</beast>
