<beast version='2.0'
       namespace='beast.evolution.tree.coalescent:bacter:bacter.model.restricted:bacter.operators:bacter.util'>
  
    <run spec="RestrictedACGSimulator" nSims="100000">
        <simACG spec="SimulatedRestrictedACG" id="acg"
                rho="0.0001" delta="50.0" sequenceLength="10000"
                nTaxa="5">
            <!--populationModel spec="ConstantPopulation" popSize="15.0"/-->
            <populationModel spec="ExponentialGrowth"
                             popSize="10.0" growthRate="0.1"/>
        </simACG>
        
        <logger logEvery="1" fileName="$(filebase).converted">
            <log spec="ConvertedRegionLogger" acg="@acg"/>
        </logger>
        
        <logger logEvery="1" fileName="$(filebase).stats">
          <log spec="ConversionGraphStatsLogger" acg="@acg"/>
        </logger>
    </run>
  
</beast>
