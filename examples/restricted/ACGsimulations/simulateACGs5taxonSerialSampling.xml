<beast version='2.0'
       namespace='beast.evolution.tree
                  :beast.evolution.alignment
                  :beast.evolution.tree.coalescent
                  :bacter
                  :bacter.model.restricted
                  :bacter.util'>

  <run spec="RestrictedACGSimulator" nSims="100000">
      <simACG spec='SimulatedRestrictedACG' id="acg"
         rho="0.0005" delta="50.0" sequenceLength="10000">
          <populationModel spec="ConstantPopulation" popSize="1.0"/>
          <trait spec='TraitSet' id="timeTrait" traitname="date-backward">
            <taxa spec='TaxonSet'>
              <taxon spec='Taxon' id="t1"/>
              <taxon spec='Taxon' id="t2"/>
              <taxon spec='Taxon' id="t3"/>
              <taxon spec='Taxon' id="t4"/>
              <taxon spec='Taxon' id="t5"/>
            </taxa>
            t1=0.0,
            t2=0.1,
            t3=0.2,
            t4=0.3,
            t5=0.4
          </trait>
      </simACG>
        
      <logger logEvery="1" fileName="$(filebase).stats">
          <log spec="ConversionGraphStatsLogger" acg="@acg"/>
      </logger>
      
      <!--logger logEvery="1" fileName="$(filebase).trees" mode="tree">
          <log idref="acg"/>
      </logger-->
  </run>
  
</beast>
